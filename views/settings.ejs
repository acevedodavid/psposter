    <form action="/updateSettings" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-6 m-auto">
                <h1 class="text-center display-4 my-4">Settings</h1>
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input class="form-control ml-auto" type="text" placeholder="Username" aria-label="Username">
                    </div>
                    <div class="form-group">
                        <label for="firstName">First Name</label>
                        <input class="form-control ml-auto" type="text" placeholder="First Name" aria-label="firstName">
                    </div>
                    <div class="form-group">
                        <label for="lastName">Last Name</label>
                        <input class="form-control ml-auto" type="text" placeholder="Last Name" aria-label="lastName">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input class="form-control ml-auto" type="password" placeholder="*****" aria-label="password">
                    </div>
            </div>
        </div>
        <div class="row my-3">
            <div class="col-md-3 ml-auto">
                <button type="submit" value="Submit" class="btn btn-success btn-block">Save</button>
            </div>
            <div class="col-md-3 mr-auto my-1">
                <a href="/">Cancel</a>
            </div>
        </div>
    </form>
    <hr>
    <form onsubmit="return confirm('Do you really want to delete your account?');">
        <div action="/deleteAccount" method="post" class="row">
            <div class="col-md-6 m-auto">
                <button type="submit" value="Submit" class="btn btn-danger btn-block">Delete Account</button>
                <p>Warning: This action will delete the account and all photos associated with it</p>
            </div>
        </div>
    </form>

    <!-- JQuery -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <!-- Bootstrap -->
